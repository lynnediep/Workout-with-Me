<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/event_name"
            android:layout_width="263dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:hint="title"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/event_description"
            android:layout_width="263dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="description"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/host_profile"
            android:layout_width="103dp"
            android:layout_height="108dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ripped_slug" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="119dp"
            android:layout_marginStart="119dp"
            android:gravity="center"
            android:text="Date:"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="53dp"
            android:layout_height="20dp"
            android:layout_below="@+id/event_description"
            android:layout_toEndOf="@+id/tvDate"
            android:layout_toRightOf="@+id/tvDate"
            android:gravity="center"
            android:hint="date" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="53dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/tvDate"
            android:layout_alignEnd="@+id/tvDate"
            android:layout_alignRight="@+id/tvDate"
            android:layout_below="@+id/event_date"
            android:layout_marginBottom="-6dp"
            android:layout_marginEnd="-55dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="-55dp"
            android:layout_toRightOf="@+id/tvDate"
            android:gravity="center"
            android:hint="time" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/host_profile"
            android:layout_toStartOf="@+id/event_location"
            android:gravity="center"
            android:text="Location:"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/event_location"
            android:layout_width="61dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/event_description"
            android:gravity="center"
            android:hint="location" />

        <TextView
            android:id="@+id/tvUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tvDate"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="Users:"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/event_users"
            android:layout_width="41dp"
            android:layout_height="25dp"
            android:layout_below="@+id/host_profile"
            android:layout_toEndOf="@+id/tvUsers"
            android:gravity="center"
            android:hint="1/2" />


    </RelativeLayout>

</android.support.v7.widget.CardView>